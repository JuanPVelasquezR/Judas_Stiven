@model SistemaInventario.Models.Entities.Sucursal

@{
    ViewData["Title"] = "Eliminar Sucursal";
}

<section class="full-width header-well">
    <div class="full-width header-well-icon">
        <i class="zmdi zmdi-store"></i>
    </div>
    <div class="full-width header-well-text">
        <p class="text-condensedLight">
            ¿Está seguro que desea eliminar esta sucursal?
        </p>
    </div>
</section>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        <div class="full-width panel mdl-shadow--2dp">
            <div class="full-width panel-tittle bg-danger text-center tittles">
                Eliminar Sucursal
            </div>
            <div class="full-width panel-content">
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col">
                        <legend class="text-condensedLight"><i class="zmdi zmdi-border-color"></i> &nbsp; INFORMACIÓN DE LA SUCURSAL</legend><br>
                    </div>
                    <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                        <h5><strong>ID:</strong></h5>
                        <p>@Model.IdSucursal</p>
                    </div>
                    <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                        <h5><strong>Nombre:</strong></h5>
                        <p>@Model.Nombre</p>
                    </div>
                    <div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet">
                        <h5><strong>Dirección:</strong></h5>
                        <p>@Model.Direccion</p>
                    </div>
                    <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                        <h5><strong>Teléfono:</strong></h5>
                        <p>@Model.Telefono</p>
                    </div>
                    <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                        <h5><strong>Encargado:</strong></h5>
                        <p>@Model.Encargado</p>
                    </div>
                </div>
                <form asp-action="Delete" method="post">
                    <input type="hidden" asp-for="IdSucursal" />
                    <p class="text-center">
                        <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored bg-danger">
                            <i class="zmdi zmdi-delete"></i> Confirmar Eliminación
                        </button>
                        <a asp-action="Index" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">
                            <i class="zmdi zmdi-arrow-left"></i> Volver a la Lista
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
