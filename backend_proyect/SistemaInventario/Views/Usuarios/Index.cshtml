@model IEnumerable<SistemaInventario.Models.Entities.Usuario>

@{
    ViewData["Title"] = "Usuarios";
}

<section class="full-width header-well">
    <div class="full-width header-well-icon">
        <i class="zmdi zmdi-account"></i>
    </div>
    <div class="full-width header-well-text">
        <p class="text-condensedLight">
            Gestión de usuarios del sistema. Aquí puede agregar, editar y eliminar usuarios.
        </p>
    </div>
</section>

<div class="mdl-tabs mdl-js-tabs mdl-js-ripple-effect">
    <div class="mdl-tabs__tab-bar">
        <a href="#tabNewUser" class="mdl-tabs__tab is-active">NUEVO</a>
        <a href="#tabListUsers" class="mdl-tabs__tab">LISTA</a>
    </div>
    <div class="mdl-tabs__panel is-active" id="tabNewUser">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--12-col">
                <div class="full-width panel mdl-shadow--2dp">
                    <div class="full-width panel-tittle bg-primary text-center tittles">
                        Nuevo Usuario
                    </div>
                    <div class="full-width panel-content">
                        <form asp-action="Create" method="post">
                            <div class="mdl-grid">
                                <div class="mdl-cell mdl-cell--12-col">
                                    <legend class="text-condensedLight"><i class="zmdi zmdi-border-color"></i> &nbsp; DATOS DEL USUARIO</legend><br>
                                </div>
                                <div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                        <input class="mdl-textfield__input" type="text" pattern="-?[A-Za-záéíóúÁÉÍÓÚñÑ ]*(\.[0-9]+)?" id="Nombre" name="Nombre" required>
                                        <label class="mdl-textfield__label" for="Nombre">Nombre Completo</label>
                                        <span class="mdl-textfield__error">Nombre inválido</span>
                                    </div>
                                </div>
                                <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                        <input class="mdl-textfield__input" type="text" id="NombreUsuario" name="NombreUsuario" required>
                                        <label class="mdl-textfield__label" for="NombreUsuario">Nombre de Usuario</label>
                                    </div>
                                </div>
                                <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                                    <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                        <input class="mdl-textfield__input" type="password" id="Contraseña" name="Contraseña" required>
                                        <label class="mdl-textfield__label" for="Contraseña">Contraseña</label>
                                    </div>
                                </div>
                                <div class="mdl-cell mdl-cell--12-col">
                                    <div class="mdl-textfield mdl-js-textfield">
                                        <select class="mdl-textfield__input" id="IdRol" name="IdRol" asp-items="ViewBag.IdRol" required>
                                            <option value="" disabled selected>Seleccione un rol</option>
                                        </select>
                                    </div>
                                </div>
                            </div>
                            <p class="text-center">
                                <button type="submit" class="mdl-button mdl-js-button mdl-button--fab mdl-js-ripple-effect mdl-button--colored bg-primary">
                                    <i class="zmdi zmdi-plus"></i>
                                </button>
                                <div class="mdl-tooltip" for="btn-addUser">Agregar usuario</div>
                            </p>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="mdl-tabs__panel" id="tabListUsers">
        <div class="mdl-grid">
            <div class="mdl-cell mdl-cell--4-col-phone mdl-cell--8-col-tablet mdl-cell--12-col-desktop">
                <div class="full-width panel mdl-shadow--2dp">
                    <div class="full-width panel-tittle bg-success text-center tittles">
                        Lista de Usuarios
                    </div>
                    <div class="full-width panel-content">
                        <div class="mdl-list">
                            @foreach (var item in Model)
                            {
                                <div class="mdl-list__item mdl-list__item--two-line">
                                    <span class="mdl-list__item-primary-content">
                                        <i class="zmdi zmdi-account mdl-list__item-avatar"></i>
                                        <span>@item.IdUsuario. @item.Nombre</span>
                                        <span class="mdl-list__item-sub-title">Usuario: @item.NombreUsuario | Rol: @item.Rol.Nombre</span>
                                    </span>
                                    <div class="mdl-list__item-secondary-content">
                                        <a asp-action="Edit" asp-route-id="@item.IdUsuario" class="mdl-list__item-secondary-action" title="Editar"><i class="zmdi zmdi-edit"></i></a>
                                        <a asp-action="Details" asp-route-id="@item.IdUsuario" class="mdl-list__item-secondary-action" title="Detalles"><i class="zmdi zmdi-info"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.IdUsuario" class="mdl-list__item-secondary-action" title="Eliminar"><i class="zmdi zmdi-delete"></i></a>
                                    </div>
                                </div>
                                <li class="full-width divider-menu-h"></li>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
