@model SistemaInventario.Models.Entities.Usuario

@{
    ViewData["Title"] = "Editar Usuario";
}

<section class="full-width header-well">
    <div class="full-width header-well-icon">
        <i class="zmdi zmdi-account"></i>
    </div>
    <div class="full-width header-well-text">
        <p class="text-condensedLight">
            Edite la información del usuario seleccionado.
        </p>
    </div>
</section>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        <div class="full-width panel mdl-shadow--2dp">
            <div class="full-width panel-tittle bg-primary text-center tittles">
                Editar Usuario
            </div>
            <div class="full-width panel-content">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="IdUsuario" />
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col">
                            <legend class="text-condensedLight"><i class="zmdi zmdi-border-color"></i> &nbsp; DATOS DEL USUARIO</legend><br>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="text" pattern="-?[A-Za-záéíóúÁÉÍÓÚñÑ ]*(\.[0-9]+)?" id="Nombre" name="Nombre" value="@Model.Nombre" required>
                                <label class="mdl-textfield__label" for="Nombre">Nombre Completo</label>
                                <span class="mdl-textfield__error">Nombre inválido</span>
                            </div>
                        </div>
                        <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="text" id="NombreUsuario" name="NombreUsuario" value="@Model.NombreUsuario" required>
                                <label class="mdl-textfield__label" for="NombreUsuario">Nombre de Usuario</label>
                            </div>
                        </div>
                        <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="password" id="Contraseña" name="Contraseña" value="@Model.Contraseña" required>
                                <label class="mdl-textfield__label" for="Contraseña">Contraseña</label>
                            </div>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col">
                            <div class="mdl-textfield mdl-js-textfield">
                                <select class="mdl-textfield__input" id="IdRol" name="IdRol" asp-items="ViewBag.IdRol" required>
                                    <option value="" disabled>Seleccione un rol</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <p class="text-center">
                        <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored bg-primary">
                            <i class="zmdi zmdi-save"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">
                            <i class="zmdi zmdi-arrow-left"></i> Cancelar
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
