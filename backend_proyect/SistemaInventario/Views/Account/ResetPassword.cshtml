@model SistemaInventario.Models.ViewModels.ResetPasswordViewModel

@{
    ViewData["Title"] = "Restablecer Contraseña";
}

<div class="full-width panel mdl-shadow--2dp">
    <div class="full-width panel-tittle bg-primary text-center tittles">
        Restablecer Contraseña
    </div>
    <div class="full-width panel-content">
        <div class="mdl-card__supporting-text">
            <p>Ingresa una nueva contraseña para tu cuenta.</p>
        </div>
        
        <form asp-action="ResetPassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Token" />
            
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input asp-for="NombreUsuario" class="mdl-textfield__input" readonly>
                <label asp-for="NombreUsuario" class="mdl-textfield__label"></label>
                <span asp-validation-for="NombreUsuario" class="mdl-textfield__error"></span>
            </div>
            
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input asp-for="NuevaContraseña" class="mdl-textfield__input" type="password">
                <label asp-for="NuevaContraseña" class="mdl-textfield__label"></label>
                <span asp-validation-for="NuevaContraseña" class="mdl-textfield__error"></span>
                <span class="mdl-textfield__helper-text">La contraseña debe tener al menos 6 caracteres</span>
            </div>
            
            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                <input asp-for="ConfirmarContraseña" class="mdl-textfield__input" type="password">
                <label asp-for="ConfirmarContraseña" class="mdl-textfield__label"></label>
                <span asp-validation-for="ConfirmarContraseña" class="mdl-textfield__error"></span>
            </div>
            
            <p class="text-center">
                <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored bg-primary">
                    Restablecer Contraseña
                </button>
            </p>
            
            <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--12-col text-center">
                    <a asp-action="Login" class="login-link">Volver al inicio de sesión</a>
                </div>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
