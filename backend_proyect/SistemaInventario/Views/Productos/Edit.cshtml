@model SistemaInventario.Models.Entities.Producto

@{
    ViewData["Title"] = "Editar Producto";
}

<section class="full-width header-well">
    <div class="full-width header-well-icon">
        <i class="zmdi zmdi-washing-machine"></i>
    </div>
    <div class="full-width header-well-text">
        <p class="text-condensedLight">
            Edite la información del producto seleccionado.
        </p>
    </div>
</section>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        <div class="full-width panel mdl-shadow--2dp">
            <div class="full-width panel-tittle bg-primary text-center tittles">
                Editar Producto
            </div>
            <div class="full-width panel-content">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="IdProducto" />
                    <div class="mdl-grid">
                        <div class="mdl-cell mdl-cell--12-col">
                            <legend class="text-condensedLight"><i class="zmdi zmdi-border-color"></i> &nbsp; INFORMACIÓN BÁSICA</legend><br>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="text" pattern="-?[A-Za-záéíóúÁÉÍÓÚñÑ ]*(\.[0-9]+)?" id="Nombre" name="Nombre" asp-for="Nombre" required>
                                <label class="mdl-textfield__label" for="Nombre">Nombre</label>
                                <span class="mdl-textfield__error">Nombre inválido</span>
                            </div>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col mdl-cell--8-col-tablet">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="text" id="Descripcion" name="Descripcion" asp-for="Descripcion">
                                <label class="mdl-textfield__label" for="Descripcion">Descripción</label>
                            </div>
                        </div>
                        <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="number" step="0.01" pattern="-?[0-9.]*(\.[0-9]+)?" id="PrecioCompra" name="PrecioCompra" asp-for="PrecioCompra" required>
                                <label class="mdl-textfield__label" for="PrecioCompra">Precio de Compra</label>
                                <span class="mdl-textfield__error">Precio inválido</span>
                            </div>
                        </div>
                        <div class="mdl-cell mdl-cell--6-col mdl-cell--8-col-tablet">
                            <div class="mdl-textfield mdl-js-textfield mdl-textfield--floating-label">
                                <input class="mdl-textfield__input" type="number" step="0.01" pattern="-?[0-9.]*(\.[0-9]+)?" id="PrecioVenta" name="PrecioVenta" asp-for="PrecioVenta" required>
                                <label class="mdl-textfield__label" for="PrecioVenta">Precio de Venta</label>
                                <span class="mdl-textfield__error">Precio inválido</span>
                            </div>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col">
                            <legend class="text-condensedLight"><i class="zmdi zmdi-border-color"></i> &nbsp; CATEGORÍA</legend><br>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col">
                            <div class="mdl-textfield mdl-js-textfield">
                                <select class="mdl-textfield__input" id="IdCategoria" name="IdCategoria" asp-for="IdCategoria" asp-items="ViewBag.IdCategoria" required>
                                    <option value="" disabled>Seleccione una categoría</option>
                                </select>
                            </div>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col">
                            <legend class="text-condensedLight"><i class="zmdi zmdi-border-color"></i> &nbsp; DATOS DEL PROVEEDOR</legend><br>
                        </div>
                        <div class="mdl-cell mdl-cell--12-col">
                            <div class="mdl-textfield mdl-js-textfield">
                                <select class="mdl-textfield__input" id="IdProveedor" name="IdProveedor" asp-for="IdProveedor" asp-items="ViewBag.IdProveedor" required>
                                    <option value="" disabled>Seleccione un proveedor</option>
                                </select>
                            </div>
                        </div>
                    </div>
                    <p class="text-center">
                        <button type="submit" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored bg-primary">
                            <i class="zmdi zmdi-save"></i> Guardar Cambios
                        </button>
                        <a asp-action="Index" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect">
                            <i class="zmdi zmdi-arrow-left"></i> Volver a la Lista
                        </a>
                    </p>
                </form>
            </div>
        </div>
    </div>
</div>
