@{
    ViewData["Title"] = "Acceso Denegado";
}

<section class="full-width header-well">
    <div class="full-width header-well-icon">
        <i class="zmdi zmdi-block"></i>
    </div>
    <div class="full-width header-well-text">
        <p class="text-condensedLight">
            No tiene permiso para acceder a esta sección.
        </p>
    </div>
</section>

<div class="mdl-grid">
    <div class="mdl-cell mdl-cell--12-col">
        <div class="full-width panel mdl-shadow--2dp">
            <div class="full-width panel-tittle bg-danger text-center tittles">
                Acceso Denegado
            </div>
            <div class="full-width panel-content">
                <div class="mdl-grid">
                    <div class="mdl-cell mdl-cell--12-col">
                        <h4 class="text-center text-danger">
                            <i class="zmdi zmdi-block zmdi-hc-5x"></i>
                        </h4>
                        <h3 class="text-center">Lo sentimos, no tiene permiso para acceder a esta sección.</h3>
                        <p class="text-center">
                            Si considera que debería tener acceso, por favor contacte al administrador del sistema.
                        </p>
                    </div>
                </div>
                <p class="text-center">
                    <a asp-controller="Home" asp-action="Index" class="mdl-button mdl-js-button mdl-button--raised mdl-js-ripple-effect mdl-button--colored bg-primary">
                        <i class="zmdi zmdi-home"></i> Volver al Inicio
                    </a>
                </p>
            </div>
        </div>
    </div>
</div>
